<Page
    x:Class="WinAuth.Pages.OTPCodePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converters="using:WinAuth.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:WinAuth.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodels="using:WinAuth.ViewModels"
    d:DataContext="{d:DesignInstance Type=viewmodels:OTPCodeViewModel}"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    mc:Ignorable="d">
    <Page.Resources>
        <converters:TotpCodeFormatterConverter x:Key="TotpCodeFormatterConverter" />
    </Page.Resources>

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="3*" />
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal">
            <Button
                MinWidth="40"
                MinHeight="40"
                Padding="12"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Background="Transparent"
                Command="{x:Bind ViewModel.GoBackCommand}">
                <FontIcon
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    FontSize="18"
                    Foreground="Gray"
                    Glyph="&#xE72B;" />
            </Button>

            <SymbolIcon Margin="10,0,0,0" Symbol="Permissions" />
            <TextBlock
                Margin="12,0,0,0"
                VerticalAlignment="Center"
                Style="{StaticResource TitleTextBlockStyle}"
                Text="Auth Code" />
        </StackPanel>

        <TextBlock
            Grid.Row="1"
            Margin="0,10,0,0"
            VerticalAlignment="Bottom"
            Style="{StaticResource SubtitleTextBlockStyle}"
            Text="{x:Bind ViewModel.Entry.Issuer, Mode=OneWay}" />

        <TextBlock
            Grid.Row="2"
            Margin="0,10,0,0"
            HorizontalAlignment="Center"
            Style="{StaticResource HeaderTextBlockStyle}"
            Text="{x:Bind ViewModel.Code, Mode=OneWay, Converter={StaticResource TotpCodeFormatterConverter}}" />

        <ProgressBar
            Grid.Row="3"
            Margin="0,10,0,0"
            Value="{x:Bind ViewModel.Progress, Mode=OneWay}" />

        <TextBlock
            Grid.Row="4"
            Margin="0,10,0,0"
            Style="{StaticResource CaptionTextBlockStyle}">
            <Run FontWeight="SemiBold" Text="{x:Bind ViewModel.SecondsLeft, Mode=OneWay}" />
            s left</TextBlock>
    </Grid>
</Page>