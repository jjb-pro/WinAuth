<Page
    x:Class="WinAuth.Pages.AccountsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:WinAuth.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:WinAuth.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="using:WinAuth.Models"
    xmlns:viewmodels="using:WinAuth.ViewModels"
    x:Name="root"
    d:DataContext="{d:DesignInstance Type=viewmodels:AccountsViewModel}"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    mc:Ignorable="d">
    <Page.BottomAppBar>
        <CommandBar>
            <AppBarButton
                Command="{x:Bind ViewModel.AddEntryCommand}"
                Icon="Add"
                Label="Add account" />
        </CommandBar>
    </Page.BottomAppBar>

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal">
            <SymbolIcon Symbol="Account" />
            <TextBlock
                Margin="12,0,0,0"
                Style="{StaticResource TitleTextBlockStyle}"
                Text="Accounts" />
        </StackPanel>

        <ListView
            Grid.Row="1"
            Margin="0,10,0,0"
            ItemsSource="{x:Bind ViewModel.Entries, Mode=OneWay}"
            SelectedItem="{x:Bind ViewModel.SelectedEntry, Mode=TwoWay}"
            SelectionChanged="{x:Bind ViewModel.OnEntrySelected}"
            SelectionMode="Single">
            <ListView.ItemContainerStyle>
                <Style TargetType="ListViewItem">
                    <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                </Style>
            </ListView.ItemContainerStyle>
            <ListView.ItemTemplate>
                <DataTemplate x:DataType="models:TotpEntry">
                    <Grid Padding="10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="auto" />
                            <ColumnDefinition />
                            <ColumnDefinition Width="auto" />
                        </Grid.ColumnDefinitions>
                        <Grid.ContextFlyout>
                            <MenuFlyout>
                                <MenuFlyoutItem
                                    Command="{Binding ViewModel.GetOTPCommand, ElementName=root}"
                                    CommandParameter="{Binding}"
                                    Text="Get time-based one-time password" />
                                <MenuFlyoutItem
                                    Command="{Binding ViewModel.RemoveEntryCommand, ElementName=root}"
                                    CommandParameter="{Binding}"
                                    Text="Remove" />
                            </MenuFlyout>
                        </Grid.ContextFlyout>

                        <controls:Persona />
                        <StackPanel Grid.Column="1" Margin="12,2,0,0">
                            <TextBlock
                                FontSize="16"
                                FontWeight="Bold"
                                Text="{x:Bind Issuer}" />
                            <TextBlock Text="{x:Bind Account}" />
                        </StackPanel>

                        <FontIcon
                            Grid.Column="2"
                            Margin="10,0,0,0"
                            HorizontalAlignment="Right"
                            Foreground="{StaticResource SystemControlDisabledBaseLowBrush}"
                            Glyph="&#xE76C;" />
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</Page>
